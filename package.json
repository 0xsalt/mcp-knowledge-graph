{
  "name": "mcp-knowledge-graph",
  "version": "1.0.3",
  "description": "MCP server enabling persistent memory for AI models through a local knowledge graph",
  "license": "MIT",
  "author": "Shane Holloman",
  "homepage": "https://github.com/shaneholloman/mcp-knowledge-graph",
  "bugs": "https://github.com/shaneholloman/mcp-knowledge-graph/issues",
  "type": "module",
  "bin": {
    "mcp-knowledge-graph": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "setup:taxonomy": "node scripts/setup-taxonomy.js",
    "validate:taxonomy": "node scripts/validate-taxonomy.js",
    "test": "node tests/basic-test.js",
    "test:jest": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.0.1",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.9.3",
    "jest": "^29.7.0",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.6.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".ts"],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
